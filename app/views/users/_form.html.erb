<%= semantic_form_for @user do |f| %>
    <%= f.inputs do %>
      <%= f.input :firstname %>
      <%= f.input :lastname %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :team %>
      <% if current_user and current_user.admin? %>
      <%= f.input :admin %>
      <% end %>
    <% end %>
    <%= f.actions %>
<% end %>
